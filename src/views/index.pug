extends layout

block content
	.main.container(ng-controller='AppCtrl')
		div.blurb
			h1 flerbs
				p a collection of flowers and herbs
		.table.container
			.row
				.col-md-3 
				.col-md-3 
				.col-md-3 
				.col-md-3 
			.row.newFlerbRow
					.col-md-3.form-group 
						input.form-control(ng-model='flerb.name' type='text' id='name' placeholder='name' name='name')
					.col-md-3.form-group
						input.form-control(ng-model='flerb.picUrl' type='text' id='picUrl' placeholder='Image URL' name='picUrl')
					.col-md-3.form-group
						input.form-control(ng-model='flerb.about' type='text' id='about' placeholder='All About This Flower/Herb' name='about')
					.col-md-3.form-group
						span.buttonHolder
							button.btn.btn-success.customButton(ng-click='addFlerb()') 
								span.glyphicon.glyphicon-plus
							button.btn.btn-primary.customButton(ng-click='updateFlerb(flerb)')
								span.glyphicon.glyphicon-ok 
			.row(ng-repeat='flerb in flerbs')
				.col-md-3.flerbName {{flerb.name}}
				.col-md-3 
					img.flerbPictures(src='{{flerb.picUrl}}')
				.col-md-3 {{flerb.about}}
				.col-md-3.editingButtons
					span.buttonHolder 
						button.btn.btn-info.customButton(ng-click='editFlerb(flerb)') 
							span.glyphicon.glyphicon-pencil 
						button.btn.btn-warning.customButton(ng-click='deleteFlerb(flerb)')
							span.glyphicon.glyphicon-remove